{
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": ["packages/**/*"]
}
